<!DOCTYPE html>
<html>

<head>
    <title>
        Users Listing
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<body>

    <%- include('./layout.ejs') %>

        <h1>
            Users Listing Page
        </h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Designation</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0;i<data.length;i++){ %>
                    <tr>
                        <td>
                            <%=data[i].id %>
                        </td>
                        <td>
                            <%=data[i].name %>
                        </td>
                        <td>
                            <%=data[i].email %>
                        </td>
                        <td>
                            <%=data[i].designation %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
</body>

</html>